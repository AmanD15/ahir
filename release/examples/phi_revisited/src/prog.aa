$parameter PDEPTH 2
$parameter PWIDTH 32
$parameter LPDEPTH (PDEPTH + 2)

$pipe out_data : $uint<PWIDTH> $depth PDEPTH

$module [phi_check_daemon] $in() $out () $is
{
	$branchblock[lOoP] {
		$dopipeline $depth (PWIDTH/2)  $buffering LPDEPTH $fullrate
		$merge $entry $loopback 
			$phi COUNT := ($bitcast ($uint<32>) 0) $on $entry NCOUNT $on $loopback
		$endmerge
		$volatile NCOUNT := (COUNT + 1)
		out_data := COUNT
		$while 1
	}
}
